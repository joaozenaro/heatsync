{
    "name": "ESP32 Development container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/workspaces/heatsync/firmware",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "platformio.platformio-ide",
                "ms-vscode.cpptools"
            ]
        }
    },
    "runArgs": [
        "--privileged"
    ],
    "mounts": [
        "source=/dev,target=/dev,type=bind,consistency=consistent"
    ],
    "postCreateCommand": "pio pkg install -p espressif32",
    "remoteUser": "vscode"
}